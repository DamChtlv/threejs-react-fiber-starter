{
  "name": "threejs-fiber-course",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --names 'VITE,TAILWIND' -c 'bgYellow.bold,bgCyan.bold' 'npm run vitedev' 'npm run tailwatch'",
    "vitedev": "vite",
    "tailwatch": "npx tailwindcss -i ./src/style.css -o ./dist/style.min.css --watch",
    "tailbuild": "npx tailwindcss -i ./src/style.css -o ./dist/style.min.css --minify",
    "build": "concurrently --names 'VITE,TAILWIND' -c 'bgYellow.bold,bgCyan.bold' 'vite build' 'npm run tailbuild'"
  },
  "dependencies": {
    "@react-three/drei": "9.32",
    "@react-three/fiber": "8.8",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "leva": "0.9",
    "postcss": "^8.4.20",
    "r3f-perf": "6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.4",
    "three": "0.145"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "vite": "^4.0.0"
  }
}
